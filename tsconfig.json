{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
  },
  "ts-node": {
    "pretty": true,
    "esm": true
  },
  "exclude": ["tests/*"],
}
